<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Teachers List</title>
</head>

<body id="root">
  <h1>Teachers Dashboard</h1>

  <div id="loading" style="display: block;">Loading...</div>
  <div id="resultMessage"></div>

  <h2 id="email"></h2>



  <script>



    window.addEventListener('load', async () => {
      const root = document.getElementById('root')
      const emailElement = document.getElementById('email')

      const loading = document.getElementById('loading');
      const resultMessage = document.getElementById('resultMessage');
      resultMessage.textContent = '';
      //get token from localhost
      const token = localStorage.getItem('token') || null

      console.log(token)
      // if there is no token 
      if (!token) {
        resultMessage.textContent = 'there is no token';
        loading.style.display = 'none';
        return;
      }


      try {

        //fetch data
        const response = await fetch('/teachers/me', {
          method: 'GET',
          headers: {
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${token}`
          }

        });


        const responseData = await response.json()
        console.log(responseData)
        if (responseData.error) {
          throw new Error(responseData.message || 'Server error');
        }


        // append data to html


        emailElement.textContent = responseData.teacher.email

      } catch (error) {
        console.log('Error:', error);
        resultMessage.textContent = `Error: ${error.message}`;
      } finally {
        // disable loading
        loading.style.display = 'none';
      }



    })
  </script>
</body>

</html>